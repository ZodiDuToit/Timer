WindowManager:
    MainScreen:


<MainScreen>:

    name: "main"

    hours: hours
    minutes: minutes
    seconds: seconds

    hourGrid: hourGrid
    minuteGrid: minuteGrid
    secondGrid: secondGrid

    FloatLayout:
        GridLayout:

            size_hint: 0.75, 0.8
            pos_hint: {"x": 0.125, "y": 0.25}

            cols: 3

            Label:
                id: hours
                text: "time"

            Label:
                id: minutes  
                text: "time"

            Label:
                id: seconds 
                text: "time"

        GridLayout:

            cols: 3

            size_hint: 0.75, 0.6
            pos_hint: {"x": 0.15, "y": 0}

            ScrollView:
                GridLayout:
                    id: hourGrid

                    cols: 1

            ScrollView:
                GridLayout:
                    id: minuteGrid

                    cols: 1

            ScrollView:
                GridLayout:
                    id: secondGrid

                    cols: 1

<GridLayout>:
    size_hint_y: None

    height: self.minimum_height  
    row_default_height: 60

    padding: 5
