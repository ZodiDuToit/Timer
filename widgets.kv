WindowManager:
    MainScreen:


<MainScreen>:

    name: "main"

    hours: hours
    minutes: minutes
    seconds: seconds

    hourGrid: hourGrid
    minuteGrid: minuteGrid
    secondGrid: secondGrid

    FloatLayout:

        BackgroundLabel:
            size_hint: 0.8, 0.2
            pos_hint: {"x": 0.125, "y": 0.775}

        GridLayout:
         
            size_hint: 0.75, 0.15
            pos_hint: {"x": 0.15, "y": 0.8}

            cols: 3  
            spacing: 20 

            Button:
                id: start
                text: "start"

                on_release: root.timerStart()

            Button:
                id: stop
                text: "stop"

                on_release: root.timerStop()

            Button:
                id: reset
                text: "reset"

                on_release: root.timerReset()

        BackgroundLabel:
            size_hint: 0.8, 0.25
            pos_hint: {"x": 0.125, "y": 0.5}           

        GridLayout:

            size_hint: 0.75, 0.5
            pos_hint: {"x": 0.15, "y": 0.225}

            cols: 3

            ColorLabel:
                id: hours
                text: "0"

            ColorLabel:
                id: minutes  
                text: "0"

            ColorLabel:
                id: seconds 
                text: "0"

        BackgroundLabel:
            size_hint: 0.8, 0.35
            pos_hint: {"x": 0.125, "y": 0}

        GridLayout:

            cols: 3

            size_hint: 0.75, 0.3
            pos_hint: {"x": 0.15, "y": 0.025}

            ScrollView:
                ScrollViewGridLayout:
                    id: hourGrid

                    cols: 1

            ScrollView:
                ScrollViewGridLayout:
                    id: minuteGrid

                    cols: 1

            ScrollView:
                ScrollViewGridLayout:
                    id: secondGrid

                    cols: 1


<ScrollViewGridLayout>:
    size_hint_y: None

    height: self.minimum_height  
    padding: 5

    row_default_height: 40


<ColorLabel>:

    size_hint_y: None
    font_size: self.height
    text_size: self.width, None

    halign: "center"

    canvas.before:
        Color:
            rgb: 0.30, 0.30, 0.30

        Rectangle:
            pos: self.pos
            size: self.size

<BackgroundLabel>:
    canvas.before:
        Color:
            rgb: 0.45, 0.162, 0.166

        Rectangle:
            pos: self.pos
            size: self.size



            