WindowManager:
    MainScreen:


<MainScreen>:

    name: "main"

    hours: hours
    minutes: minutes
    seconds: seconds

    hourGrid: hourGrid
    minuteGrid: minuteGrid
    secondGrid: secondGrid

    FloatLayout:

        GridLayout:
         
            size_hint: 0.75, 0.2
            pos_hint: {"x": 0.3, "y": 0.8}

            cols: 3  
            spacing: 20 

            Button:
                id: start
                text: "start"

                on_release: root.timerStart()

            Button:
                id: stop
                text: "stop"

                on_release: root.timerStop()

            Button:
                id: reset
                text: "reset"

                on_release: root.timerReset()

        GridLayout:

            size_hint: 0.75, 0.8
            pos_hint: {"x": 0.125, "y": 0.25}

            cols: 3

            ColorLabel:
                id: hours
                text: "0"

            ColorLabel:
                id: minutes  
                text: "0"

            ColorLabel:
                id: seconds 
                text: "0"

        GridLayout:

            cols: 3

            size_hint: 0.75, 0.6
            pos_hint: {"x": 0.15, "y": 0}

            ScrollView:
                ScrollViewGridLayout:
                    id: hourGrid

                    cols: 1

            ScrollView:
                ScrollViewGridLayout:
                    id: minuteGrid

                    cols: 1

            ScrollView:
                ScrollViewGridLayout:
                    id: secondGrid

                    cols: 1


<ScrollViewGridLayout>:
    size_hint_y: None

    height: self.minimum_height  
    padding: 5

<GridLayout>:
    size_hint_y: None

    height: self.minimum_height  
    row_default_height: 60

    padding: 5


<ColorLabel>:

    size_hint_y: None
    height: self.texture_size[1]
    text_size: self.width, None

    halign: "center"

    canvas.before:
        Color:
            rgb: 0.30, 0.30, 0.30

        Rectangle:
            pos: self.pos
            size: self.size

<BackgroundLabel>:
    canvas.before:
        Color:
            rgb: 0.70, 0.30, 0.1

        Rectangle:
            pos: self.pos
            size: self.size
    
<ScrollViewButton>:
    halign: "center"

    size_hint_y: None
    height: self.texture_size[1]
    text_size: self.width, None

            